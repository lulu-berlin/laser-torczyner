{
  "compilerOptions": {
    "importHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/type-declarations"
    ],
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
